<settings>
    <setting propertyKey="@Properties.AppTheme" title="@Strings.MainMenu_AppTheme">
        <settingConfig type="list">
            <listEntry value="0">@Strings.MainMenu_AppTheme_Light</listEntry>
            <listEntry value="1">@Strings.MainMenu_AppTheme_Dark</listEntry>
        </settingConfig>
    </setting>

    <setting
        propertyKey="@Properties.OrangeColoringThreshold"
        title="@Strings.CIQ_OrangeColoringThreshold">
        <settingConfig
            type="numeric"
            min="0"
            max="100"
            errorMessage="@Strings.CIQ_ColoringThreshold_ErrorMessage" />
    </setting>
    <setting
        propertyKey="@Properties.RedColoringThreshold"
        title="@Strings.CIQ_RedColoringThreshold">
        <settingConfig
            type="numeric"
            min="0"
            max="100"
            errorMessage="@Strings.CIQ_ColoringThreshold_ErrorMessage" />
    </setting>

    <setting
        propertyKey="@Properties.BottomSubtitleData"
        title="@Strings.CIQ_BottomSubtitleData">
        <settingConfig type="list">
            <listEntry value="0">@Strings.CIQ_BottomSubtitleData_WheelModel</listEntry>
            <listEntry value="1">@Strings.CIQ_BottomSubtitleData_PWM</listEntry>
            <listEntry value="2">@Strings.CIQ_BottomSubtitleData_Speed</listEntry>
            <listEntry value="4">@Strings.CIQ_BottomSubtitleData_RideTime</listEntry>
            <listEntry value="3">@Strings.CIQ_BottomSubtitleData_Distance</listEntry>
        </settingConfig>
    </setting>

    <setting propertyKey="@Properties.DataUpdateSpeed" title="@Strings.CIQ_DataUpdateSpeed">
        <settingConfig type="list">
            <listEntry value="400">@Strings.MainMenu_DataUpdateSpeed_Fast</listEntry>
            <listEntry value="1000">@Strings.MainMenu_DataUpdateSpeed_Medium</listEntry>
            <listEntry value="1500">@Strings.MainMenu_DataUpdateSpeed_Slow</listEntry>
            <listEntry value="2000">@Strings.CIQ_DataUpdateSpeed_SuperSlow</listEntry>
        </settingConfig>
    </setting>
</settings>